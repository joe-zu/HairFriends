<!-- contact -->
<section class="contact py-sm-5 py-4">
    <div class="container py-md-3">
        <h2 class="heading text-capitalize text-center mb-lg-5 mb-sm-4 mb-3"> Community Blog</h2>
        <div class="contact-form">
            <form class="create-form" action="" method="post">
                <div class="row main-w3layouts-sectns">
                    <div class="col-lg-3 col-md-6 w3-btm-spc form-text1">
                        <input id="formFirstName" type="text" class="form-control" placeholder="First name"
                            autocomplete="given-name">
                    </div>
                    <div class="col-lg-3 col-md-6 w3-btm-spc form-text2">
                        <input id="formLastName" type="text" class="form-control" placeholder="Last name"
                            autocomplete="family-name">
                    </div>
                </div>
                <div class="main-w3layouts-sectns ">
                    <div class="w3-btm-spc form-text2 p-0">
                        <label for="formBody">Give us a shout out! Tell us why you love Hair Friends 2...</label>
                        <textarea class="form-control" id="formBody" rows="3"></textarea>
                        <small id="bodyHelp" class="form-text text-muted">Max 1500 characters.</small>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</section>
<!-- //contact -->
<section class="testi py-5" id="testi">
	<div class="container pb-xl-5 py-lg-3">
		<h3 class="text-center heading mb-5">What our customers say</h3>
